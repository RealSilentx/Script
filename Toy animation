-- Server Script for setting animations for players

-- Function to set up custom animations
local function setupAnimations(player)
    -- Wait for the character to load
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    
    -- Wait for the Animate script to load
    local animate = character:WaitForChild("Animate")

    -- Set custom animation IDs
    animate.idle.Animation1.AnimationId = "http://www.roblox.com/asset/?id=782841498"
    animate.idle.Animation2.AnimationId = "http://www.roblox.com/asset/?id=782845736"
    animate.walk.WalkAnim.AnimationId = "http://www.roblox.com/asset/?id=782843345"
    animate.run.RunAnim.AnimationId = "http://www.roblox.com/asset/?id=782842708"
    animate.jump.JumpAnim.AnimationId = "http://www.roblox.com/asset/?id=782847020"
    animate.climb.ClimbAnim.AnimationId = "http://www.roblox.com/asset/?id=782843869"
    animate.fall.FallAnim.AnimationId = "http://www.roblox.com/asset/?id=782846423"
    
    -- Make the character jump
    humanoid.Jump = true
end

-- Connect the function to the PlayerAdded event
game.Players.PlayerAdded:Connect(function(player)
    player.CharacterAdded:Connect(function()
        setupAnimations(player)
    end)
end)
